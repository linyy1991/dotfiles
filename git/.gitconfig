[init]
  templatedir = ~/.gittemplates
[include]
	path = ~/.gitconfig.d/gitconfig
[core]
	pager = less -F -X -R
	editor = /usr/bin/vim
[alias]
	s = status -sb
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = 'diffconflicts vim '
	trustExitCode = true
	keepBackup = false
[gc]
	autoDetach = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
